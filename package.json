{
  "name": "@spike-land-ai/spike-cli",
  "version": "0.1.1",
  "description": "MCP multiplexer CLI with lazy toolset loading \u2014 aggregate MCP servers, load tool definitions on demand, keep AI context windows focused",
  "type": "module",
  "bin": {
    "spike": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "prepack": "tsup src/cli.ts src/index.ts --format esm --dts --clean",
    "build": "tsup src/cli.ts src/index.ts --format esm --dts --clean",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@modelcontextprotocol/sdk": "^1.27.1",
    "commander": "14.0.3",
    "dotenv": "^17.3.1",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@spike-land-ai/eslint-config": "^2.0.1",
    "@spike-land-ai/tsconfig": "^2.0.0",
    "@types/node": "25.3.2",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "^9.27.0",
    "tsup": "8.5.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
